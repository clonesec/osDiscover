/* Main Horizontal Drop Down Menu */

.nav {
	width: 100%;
}

.app_name {
	width: 160px;
	height: 85px;
	float: right;
	background: url("<%= asset_path("main/osDiscover.png") %>") 0 10px no-repeat;
}

#ddm {
	border: 1px solid #cdcdcd;
	background: url("<%= asset_path("main/nav-bg.png") %>") repeat-x;
	text-align: center;
	display: block;
	height: 34px;
	padding: 0;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
}

#ddm li.first {
	border-left: 0;
}

#ddm li.last {
	border-right: 0 !important;
}

#ddm li.last a {
padding-left: 30px;
}

#ddm li.last img {
float: left;
display: block;
margin: 10px 0 0 10px;
}

#ddm li {
	float: left;
	display: block;
	height: 34px;
border-right: 1px solid #c8c8c8;
}	

#ddm li a {
	display: block;
	height: 34px;
	line-height: 34px;
	padding: 0 20px;
color: #4f4f4f;
	font-size: 14px;
}

#ddm li a:hover {
	display: block;
	height: 34px;
	color: #fff;
	background: url("<%= asset_path("main/nav-bg.png") %>") 0px -36px repeat-x;
}
/* Drop Down menus */

		#ddm li ul{	
			margin: 0px 0 0 0px;
			padding: 0;
			position: absolute;
			display: none;
			z-index: 1;
			width: 170px;
			background: #FFFFFF;
			border: 1px solid #DDDDDD;
			border-top: 0;
			padding-bottom: 1px;
			opacity: 0.9;
			-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=90)";
			filter: alpha(opacity=90);
			-moz-opacity: 0.90;
			-khtml-opacity: 0.9;
		}


		#ddm li ul li, #ddm li ul li a, #ddm li ul li a:hover{
			height: 34px;
			line-height: 34px;
		}

		#ddm li ul li {
border: 0;

		}

		
		#ddm li ul li a{
	background: #fefefe;
			text-align: left;
			z-index: 1;
			display: block;
			width: 140px;
			display: block;
			color: #333;
			text-shadow: none;
			padding-left: 10px;
			text-decoration: none;
			font-size: 12px;
			font-weight: normal;
			border-top: 1px solid #ddd;
height: 34px;
		}

		
		#ddm li ul li a:hover{
			color: #20407A;
			background: #EEEEEE;
	background: url("<%= asset_path("main/nav-bg.png") %>") 0px -36px repeat-x;
color: #fff;
	}

#menu-right {
float: right;
}

#menu-right li {
border-right: 0;
border-left: 1px solid #c8c8c8;
}

#ddm li.admin-option {
border-right: 0;
height: 20px;
line-height: 20px;
padding: 0;

}

#ddm li.admin-option a.no_menu_link {
border: 1px solid #c8c8c8;
padding: 0 0 0 5px;
margin: 4px 0 0 0;
height: 24px;
line-height: 22px;
width: 140px;
text-align: left;
	background: url("<%= asset_path("main/nav-bg.png") %>") repeat-x;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
}

#ddm li.admin-option img{
float: right;
display: block;
margin: -16px 6px 0 0px;

}

#ddm li.admin-option a.no_menu_link:hover {
color: #333;
}

.admin-option, .admin-option ul  {
	margin-left: 270px;
