body {
	font-family: arial, sans-serif;
}

#content h1 {
	overflow: auto;
	width: 590px;
	margin: 0 auto;
}

#os_discover {
	background: url("<%= asset_path("main/osDiscover.png") %>") no-repeat;
	margin: 0 auto;
	width: 140px;
	height: 80px;
	float: right;
	line-height: 80px;
}

#clone_systems {
	line-height: 80px;
	float: left;
	width: 240px;
	height: 80px;
	background: url("<%= asset_path("main/Clone_Systems_Managed_Security.jpeg") %>") center center no-repeat;
}

#user_new {
	width: 588px;
	margin: 0 auto;
	margin-top: 20px;
	border: 1px solid #bdbdbd;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	background: url("<%= asset_path("login/login-bg.jpg") %>") 0px 45px no-repeat;
}

#login_label {
	height: 45px;
	border-bottom: 1px solid #bdbdbd;
	-webkit-border-top-left-radius: 8px;
	-webkit-border-top-right-radius: 8px;
	-moz-border-radius-topleft: 8px;
	-moz-border-radius-topright: 8px;
	border-top-left-radius: 8px;
	border-top-right-radius: 8px;
	font-size: 18px;
	font-family: arial, sans-serif;
	text-align: left;
	line-height: 45px;
	text-indent: 20px;
	background: url("<%= asset_path("login/login-header.png") %>") repeat-x;
	margin-bottom: 40px;
}

#login_footer {
	height: 34px;
	background: url("<%= asset_path("login/login-footer.png") %>") repeat-x;
	border-top: 1px solid #bdbdbd;
	-webkit-border-bottom-left-radius: 8px;
	-webkit-border-bottom-right-radius: 8px;
	-moz-border-radius-bottomleft: 8px;
	-moz-border-radius-bottomright: 8px;
	border-bottom-left-radius: 8px;
	border-bottom-right-radius: 8px;
	line-height: 34px;
	margin-top: 40px;
}

#login_footer .left, #page_footer .left {
	float: left;
	display: block;
	margin-left: 20px;
	font-family: arial, sans-serif;
	font-size: 12px;
}

#login_footer .right, #page_footer .right {
	float: right;
	display: block;
	margin-right: 20px;
	font-size: 12px;
	font-family: arial, sans-serif;
}

#user_new label {
	color: #fff;
	margin-right: 10px;
}

#user_new input#user_submit {
	background: url("<%= asset_path("login/button-bg.png") %>");
	border: 0;
	color: #fff;
	width: 77px;
	height: 30px;
	cursor: pointer;
}

#user_new input#user_submit:hover {
	background-position: 0px 30px;
}

#user_new input {
	color: #575757;
	background-color: #f8f8f8;
	border: 1px solid #cccccc;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
	padding: 6px;
	width: 163px;
}

