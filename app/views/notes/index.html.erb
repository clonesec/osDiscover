<script>
	$(document).ready(function() { 
		$(".tablesorter").tablesorter(); 
	});
</script>

<% title "Notes" %>
<article class="module">
	<header><h3>Notes Overview</h3></header>
<table class="tablesorter" cellspacing="0">
  <thead> 
  <tr>
    <th class="first">NVT</th>
    <th>Text</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead> 	  
  <tbody>
  <% for note in @notes %>
    <tr class=<%= cycle('even', 'odd')%>>
      <td><%= note.nvt_name %></td>
      <td><%= note.note_text %></td>
      <td><%= link_to "details", note_path(note.id), :class => "details-button" %></td>
      <td><%= link_to "edit", edit_note_path(note.id), :class => "edit-button" %></td>
  		<td><%= link_to "delete", note_path(note.id), :confirm => 'Are you sure?', :method => :delete, :class => "delete-button" %></td>
    </tr>
		<tr><td colspan="5"><hr /></td></tr>
  <% end %>
	</tbody>
</table>
</article>
