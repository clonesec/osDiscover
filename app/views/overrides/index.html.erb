<script>
	$(document).ready(function() { 
		$(".tablesorter").tablesorter(); 
	});
</script>

<% title "Exceptions" %>
<article class="module">
	<header><h3>Exceptions Overview</h3></header>
<table class="tablesorter" cellspacing="0">
  <thead> 
  <tr >
    <th class="first">NVT</th>
    <th>From</th>
    <th>To</th>
    <th>Text</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead> 	  
  <tbody>
  <% for override in @overrides %>
    <tr class=<%= cycle('even', 'odd')%>>
      <td><%= override.nvt_name %></td>
      <td><span class="<%= override.threat %>-icon"><%= override.threat %></span></td>
      <td><%= override.new_threat %></td>
      <td><%= override.override_text %></td>
      <td><%= link_to "Details", override_path(override.id), :class => "details-button" %></td>
      <td><%= link_to "Edit", edit_override_path(override.id), :class => "edit-button" %></td>
  		<td><%= link_to "Delete", override_path(override.id), :confirm => 'Are you sure?', :method => :delete, :class => "delete-button" %></td>
    </tr>
  <% end %>
		</tbody>
	</table>
	</article>
